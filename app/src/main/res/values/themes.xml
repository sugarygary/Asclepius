<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Asclepius" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/asclepius_blue</item>
        <item name="android:windowBackground">@color/asclepius_bg_light</item>
    </style>

    <style name="Theme.Asclepius" parent="Base.Theme.Asclepius" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/asclepius_bg_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/asclepius_inset</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Asclepius</item>
    </style>

    <style name="MenuTitle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_circle_cancer</item>
    </style>
</resources>